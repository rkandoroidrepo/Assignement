<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:textColor="@color/content_title_color"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title"
        android:padding="@dimen/padding_small"
        android:text="Murdochs needed counselling after backing scandal, says magazine"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:textSize="@dimen/text_size_description_text"
            android:textColor="@android:color/black"
            android:text="NEW YORK:The British phone-hacking scandal brought simmering tension" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:padding="@dimen/padding_small"
            android:src="@drawable/image_place_holder"
            android:scaleType="fitXY" />
    </LinearLayout>
</LinearLayout>
